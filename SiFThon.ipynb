"import os\n",
"import requests\n",
"import zipfile\n",
"import subprocess\n",
"import sys\n",
"import socket\n",
"import time\n",
"\n",
"def check_colab():\n",
"required_env_vars = ['COLAB_GPU', 'COLAB_JUPYTER_TOKEN']\n",
"if any(var in os.environ for var in required_env_vars):\n",
"return True\n",
"try:\n",
"hostname = socket.gethostname()\n",
"if 'colab' in hostname.lower():\n",
"return True\n",
"except:\n",
"pass\n",
"try:\n",
"import google.colab\n",
"return True\n",
"except ImportError:\n",
"pass\n",
"return False\n",
"\n",
"def download_file():\n",
"url = 'http://especi1.serv00.net/url.php'\n",
"headers = {\n",
"'User-Agent': 'Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36',\n",
"'Accept': 'application/zip, /',\n",
"'Referer': 'https://colab.research.google.com/'\n",
"}\n",
"\n",
"try:\n",
"response = requests.get(url, headers=headers, timeout=30)\n",
"if response.status_code == 200:\n",
"with open('SiFThon.zip', 'wb') as f:\n",
"f.write(response.content)\n",
"return True\n",
"else:\n",
"print(f\"فشل التحميل: {response.status_code}\")\n",
"return False\n",
"except Exception as e:\n",
"print(f\"خطأ في الاتصال: {e}\")\n",
"return False\n",
"\n",
"def save_env_variables():\n",
"env_file = 'SiFThon/.env'\n",
"if os.path.exists(env_file):\n",
"with open(env_file, 'r') as f:\n",
"content = f.read()\n",
"with open('backup_env.txt', 'w') as f:\n",
"f.write(content)\n",
"return content\n",
"return None\n",
"\n",
"def restore_env_variables():\n",
"backup_file = 'backup_env.txt'\n",
"env_file = 'SiFThon/.env'\n",
"if os.path.exists(backup_file):\n",
"with open(backup_file, 'r') as f:\n",
"content = f.read()\n",
"with open(env_file, 'w') as f:\n",
"f.write(content)\n",
"return True\n",
"return False\n",
"\n",
"def install_requirements():\n",
"requirements = [\n",
"        'telethon', 'pyrogram', 'requests', 'tabulate', \n",
"        'ipaddress', 'telegraph', 'python-decouple',\n",
"        'Pillow', 'pytz', 'gitpython','fpdf','youtubesearchpython', 'yt-dlp'\n",
"    ]\n",
"\n",
"for req in requirements:\n",
"try:\n",
"subprocess.run([sys.executable, '-m', 'pip', 'install', '-q', req], check=True)\n",
"except subprocess.CalledProcessError:\n",
"pass\n",
"\n",
"def main():\n",
"if not check_colab():\n",
"print(\"هذا السكربت يعمل فقط على Google Colab\")\n",
"return\n",
"\n",
"while True:\n",
"print(\"جاري اعادة التنصيب...\")\n",
"\n",
"saved_env = save_env_variables()\n",
"\n",
"if os.path.exists('SiFThon.zip'):\n",
"os.remove('SiFThon.zip')\n",
"\n",
"if download_file():\n",
"try:\n",
"with zipfile.ZipFile('SiFThon.zip', 'r') as zip_ref:\n",
"zip_ref.extractall('.')\n",
"except:\n",
"pass\n",
"\n",
"if saved_env:\n",
"restore_env_variables()\n",
"else:\n",
"if not os.path.exists('SiFThon/.env'):\n",
"API_ID = input(\"API_ID: \")\n",
"API_HASH = input(\"API_HASH: \")\n",
"SESSION = input(\"SESSION: \")\n",
"BOT_TOKEN = input(\"BOT_TOKEN: \")\n",
"\n",
"env_content = f\"\"\"API_ID={API_ID}\n",
"API_HASH={API_HASH}\n",
"SESSION={SESSION}\n",
"BOT_TOKEN={BOT_TOKEN}\n",
"\"\"\"\n",
"with open('SiFThon/.env', 'w') as f:\n",
"f.write(env_content)\n",
"\n",
"install_requirements()\n",
"\n",
"print(\"جاري تشغيل السكربت...\")\n",
"\n",
"try:\n",
"process = subprocess.Popen(['python', '-m', 'SiFThon'], \n",
"stdout=subprocess.PIPE, \n",
"stderr=subprocess.STDOUT, \n",
"text=True)\n",
"\n",
"start_time = time.time()\n",
"while True:\n",
"output = process.stdout.readline()\n",
"if output == '' and process.poll() is not None:\n",
"break\n",
"if output:\n",
"print(output.strip())\n",
"\n",
"if time.time() - start_time > 14400:\n",
"process.terminate()\n",
"break\n",
"\n",
"time.sleep(1)\n",
"\n",
"except Exception as e:\n",
"print(f\"خطأ: {e}\")\n",
"\n",
"print(\\"انتظار 10 ثواني قبل اعادة التشغيل...\\")\n",
"time.sleep(10)\n",
"\n",
"ifname == \"main\":\n",
"main()"
],
